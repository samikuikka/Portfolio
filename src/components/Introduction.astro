---
import Circle from "./Circle.astro";
import Triangle from "./Triangle.astro";
---

<!-- The container for introduction -->
<div
    class="relative min-w-full min-h-screen bg-gradient-to-tl from-violet-400/80 via-rose-500/60 to-fuchsia-400 -z-50 overflow-hidden"
>

    <!-- Background circle -->
    <div
        class="absolute bottom-[-50px] right-[-50px] -z-[49]"
    >
        <Circle />
    </div>

    <!-- Background triangle -->
    <div class="absolute top-20 -left-64 transform rotate-[220deg]">
        <Triangle />
    </div>

</div>