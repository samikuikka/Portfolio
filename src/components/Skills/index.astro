---
import ProfilePic from './ProfilePic/index.astro';
import Technologies from './Technologies/index.astro';
---

<!-- Skills container -->
<div class="skills flex flex-col min-w-full min-h-screen z-40 bg-background px-[3%] py-[3%]" id="skills">
    <!-- Header -->
    <div class="flex flex-row w-full md:w-1/2 justify-center">
        <h1 class="text-5xl">My Skills</h1>
    </div>

    <!-- Skills content -->
    <div class="flex-1 flex lg:flex-row flex-col">
        <div class="flex-1 py-16">
            <ProfilePic />
        </div>
        <div class="flex-1">
            <Technologies />
        </div>
    </div>
</div>
