---
const { technologies } = Astro.props;
import { Icon } from "astro-icon";
---

<div class="not-prose w-full flex flex-row gap-3">
    {
        technologies.map((technology: {name: string, logo?: string}) => {
            return (
                <div class="rounded-2xl px-4 text-sm text-black font-bold flex flex-row items-center gap-1 
                            bg-gradient-to-tl hover:from-violet-400/80 hover:via-rose-500/60 hover:to-fuchsia-400
                            from-violet-400/40 via-rose-500/30 to-fuchsia-400/50

                ">
                    <Icon pack="logos" name={technology.logo ? technology.logo : technology.name} class="h-4 inline"/>
                    {technology.name}
                </div>
            );
        })
    }
</div>

