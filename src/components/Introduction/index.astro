---
import Circle from "../Circle.astro";
import Triangle from "../Triangle.astro";
import Glass from "../Glass";
import Header from "./Header/index.astro";
import Content from './Content/index.astro';
import Actions from "./Actions";
---

<!-- The container for introduction -->
<div
    class="relative min-w-full md:h-[100vh] bg-gradient-to-tl from-violet-400/80 via-rose-500/60 to-fuchsia-400 z-[1] overflow-hidden"
>
    <div class="relative h-full w-full px-[2%] py-[2%] md:px-[5%] md:py-[3%]">
        <Glass>
            <div class="flex flex-col py-6 px-7 w-full h-full ">
                <Header />
                <Content />
                <Actions client:visible />
            </div>
        </Glass>
    </div>

    <!-- Background circle -->
    <div class="absolute bottom-[-50px] right-[-50px] z-[-1]">
        <Circle />
    </div>

    <!-- Background triangle -->
    <div class="absolute top-20 -left-64 transform rotate-[220deg] z-[-1]">
        <Triangle />
    </div>
</div>
