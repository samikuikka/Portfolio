---
import Triangle from "../Triangle.astro";
import Circle from "../Circle";
import drawing from './contact-undraw.svg';
import ContactForm from "./ContactForm";
---


<div
    class="relative flex flex-col w-full h-screen bg-gradient-to-tl from-violet-400/80 via-rose-500/60 to-fuchsia-400 overflow-hidden"
>
    <!-- Header -->
    <div class="flex flex-row w-full md:w-1/2 justify-center pt-[3%]">
        <div class="flex flex-col text-center">
            <h1 class="text-5xl">Contact</h1>
            <h3 class="text-2xl pt-4">By email: samikuikka@outlook.com</h3>
        </div>
    </div>

    <!-- Content -->
    <div class="h-full w-full flex flex-row">
        <div class="flex-1 flex flex-col justify-end">
            <img src={drawing}/>
        </div>
        <div class="flex-1">
            <ContactForm client:visible />
        </div>

    </div>

    <!-- Circle -->
    <!-- <div class="absolute right-[-50px] bottom-8">
        <Circle extra="h-80 w-80"/>
    </div> -->
</div>